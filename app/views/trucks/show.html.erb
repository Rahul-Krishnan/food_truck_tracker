<div class="menu">
  <h1><%= @truck.name %></h1>
  <ul class="truck-info">
    <div class="content">
      <% if !@truck.appointments.empty? %>
        <ul>
        <% @truck.appointments.each do |appointment| %>
            <%= appointment.timeslot.day %>
            <%= appointment.timeslot.time %>: </br>
            <%= appointment.location.address %> </br></br>
          <% end %>
        </ul>
      <% end %>

      <% truck_count = 0 %>
      <% current_user.favorite_trucks.each do |fav_truck| %>
        <% if fav_truck.truck.id == @truck.id %>
          <% truck_count +=1 %>
        <% end %>
      <% end %>
      <% if truck_count == 0 %>
        <li>
          <span class="prompt"><%= link_to "Make favorite",  FavoriteTruck.create(truck: @truck, user: current_user) %></span>
        </li>
      <% else %>
        <li>
          <span class="prompt"><%= link_to "Remove favorites", favorite_truck_path(@truck), data: {:confirm => 'Are you sure?'}, :method => :delete %></span>
        </li>
      <% end %>
    </div>
  </ul>
</div>
